<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img"
    tools:context=".Clicking_on_Button_01">


        <ImageButton
            android:id="@+id/menu_image_button"
            android:layout_width="200dp"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.702"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/menu_bg_img" />



        <TextView
            android:id="@+id/menu_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hope you find what you are looking for here"
            android:textColor="#0288D1"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/menu_image_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.861" />

        <ImageView
            android:id="@+id/restaurant_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/menu_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.212"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant 1"
            android:textColor="#7B1FA2"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/menu_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/restaurant_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/review_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating = 4.1"
            android:textColor="#3674787A"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_image_button"
            app:layout_constraintVertical_bias="0.719" />

        <TextView
            android:id="@+id/restaurant_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="located at"
            app:layout_constraintBottom_toTopOf="@+id/menu_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/restaurant_icon"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_name"
            />

        <Button
            android:id="@+id/book_now_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Now"
            app:layout_constraintBottom_toTopOf="@+id/review_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_image_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>