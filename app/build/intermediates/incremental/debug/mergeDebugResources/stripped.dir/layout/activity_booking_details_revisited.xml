<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img"
    tools:context=".booking_details_revisited">

    <ImageView
        android:id="@+id/revisit_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/revisit_icon" />

    <TextView
        android:id="@+id/verify_details_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Please verify the following details"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/revisit_icon" />

    <TextView
        android:id="@+id/TV_for_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Name   :    "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#E91E63"
        android:textSize="18dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verify_details_message" />

    <TextView
        android:id="@+id/TV_for_name_response"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="52dp"
        android:hint="name"
        android:textColor="#3F51B5"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@id/TV_for_name"
        app:layout_constraintTop_toBottomOf="@id/verify_details_message" />

    <TextView
        android:id="@+id/TV_for_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Phone number   :    "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#E91E63"
        android:textSize="18dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_for_name" />

    <TextView
        android:id="@+id/TV_for_phone_number_response"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="52dp"
        android:hint="number"
        android:textColor="#3F51B5"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@id/TV_for_name"
        app:layout_constraintTop_toBottomOf="@id/TV_for_name_response" />

    <TextView
        android:id="@+id/TV_for_number_of_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Numberof seats   :   "
        android:textColor="#E91E63"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_for_phone_number" />

    <TextView
        android:id="@+id/TV_for_number_of_seats_response"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:hint="number_of_seats"

        android:textColor="#3F51B5"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_for_phone_number_response" />

    <TextView
        android:id="@+id/TV_for_date_of_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Date of Booking   :   "
        android:textColor="#E91E63"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_for_number_of_seats" />

    <TextView
        android:id="@+id/TV_for_date_of_booking_response"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:hint="date"
        android:textColor="#3F51B5"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_for_number_of_seats_response" />

    <TextView
        android:id="@+id/TV_for_time_of_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Time of Booking   :   "
        android:textColor="#E91E63"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_for_date_of_booking" />

    <TextView
        android:id="@+id/TV_for_time_of_booking_response"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:hint="time"
        android:textColor="#3F51B5"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_for_date_of_booking_response" />

    <Button
        android:id="@+id/button_to_go_to_final_thanking_page"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_for_time_of_booking_response"
        app:layout_constraintVertical_bias="0.505"
        android:text="Confirm"/>

    <Button
        android:id="@+id/Return_to_fill_details_of_booking_page"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="52dp"
        android:text="Go Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_for_time_of_booking"
        app:layout_constraintVertical_bias="0.505" />


</androidx.constraintlayout.widget.ConstraintLayout>