        <!-- for set up massage  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_let_s_set_up_your_account"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="-380dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/TextView_sign_up_massage"
            />

        <!-- for Edit text used in email -->
        <EditText
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/TextView_sign_up_massage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:drawableStart="@drawable/ic_email_24"
            android:id="@+id/Edit_view_for_email"
            />

        <!-- for Edit text used in user name -->
        <EditText
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/Edit_view_for_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textPersonName"
            android:hint="User name"
            android:id="@+id/Edit_view_for_username"
            android:drawableStart="@drawable/ic_person_24"
            />

        <!-- for Edit text used in phone -->
        <EditText
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/Edit_view_for_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textPersonName"
            android:hint="Phone"
            android:id="@+id/Edit_view_for_phone"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            />

        <!-- for Edit text used in password -->
        <EditText
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/Edit_view_for_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textPassword"
            android:hint="Password"
            android:id="@+id/Edit_view_for_password"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            />

        <!-- for Edit text used in Confirm password -->
        <EditText
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/Edit_view_for_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:id="@+id/Edit_view_for_Confirm_password"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            />

        <!--    <EditText-->
        <!--        android:layout_width="270dp"-->
        <!--        android:layout_height="54dp"-->
        <!--        android:hint="Address"-->
        <!--        android:drawableStart="@drawable/ic_baseline_home_24"-->
        <!--        android:layout_marginTop="12dp"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintTop_toBottomOf="@id/Edit_view_for_password"-->
        <!--        android:id="@+id/Edit_view_for_address"-->
        <!--        android:inputType="textPostalAddress"-->
        <!--        />-->

        <!-- for Button used in Sign Up -->
        <Button
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:text="Sign up"
            android:textStyle="bold"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/Edit_view_for_Confirm_password"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/Button_for_sign_up"
            />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="       By signing up, you agree to our terms and conditions"
            app:layout_constraintTop_toBottomOf="@id/Button_for_sign_up"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="10dp"
            android:textStyle="bold"
            android:id="@+id/Text_view_for_agreement_massage"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

