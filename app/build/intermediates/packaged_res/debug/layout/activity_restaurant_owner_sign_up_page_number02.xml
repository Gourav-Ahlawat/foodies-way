        <!-- for textview used in message showing for entering basic information  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please, provide some basic details"
            android:textStyle="italic"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="162dp"
            android:id="@+id/text_view_massage"
            />

        <!-- Edit text view for Address -->
        <EditText
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:hint = "Address"
            android:drawableStart="@drawable/ic_baseline_home_24"
            android:inputType="textPostalAddress"
            app:layout_constraintTop_toBottomOf="@id/text_view_massage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="54dp"
            android:id="@+id/Edit_text_for_Address"
            />

        <!-- Edit text view for Phone number  -->
        <EditText
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:hint = "Phone number"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            app:layout_constraintTop_toBottomOf="@id/Edit_text_for_Address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:inputType="phone"
            android:id="@+id/Edit_text_for_phone_number"
            />

        <!-- Edit text view for Email  -->
        <EditText
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:hint = "Email"
            android:drawableStart="@drawable/ic_email_24"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/Edit_text_for_phone_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:id="@+id/Edit_text_for_Email"
            />

        <!-- Edit text view for FSSAI CODE  -->
        <EditText
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:hint = "FSSAI Code"
            app:layout_constraintTop_toBottomOf="@id/Edit_text_for_Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:inputType="numberDecimal"

            android:id="@+id/Edit_text_for_FSSAI_code"
            />

        <!-- for Button used in Sign Up -->
        <Button
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:text="sign up"
            android:textStyle="bold"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/Edit_text_for_FSSAI_code"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/Button_for_sign_up"
            />

        <!-- Text View for condition message -->
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="       By signing up, you agree to our terms and conditions"
            app:layout_constraintTop_toBottomOf="@id/Button_for_sign_up"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="10dp"
            android:textStyle="bold"
            android:id="@+id/Text_view_for_agreement_massage"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>